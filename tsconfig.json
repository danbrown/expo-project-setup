{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "baseUrl": "./src/",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "paths":{
      "@common": ["common"],
      "@theme": ["theme"],
      "@routes": ["routes"],
      "@hooks": ["hooks"],
      "@services": ["services"],
      "@components": ["components"],
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
